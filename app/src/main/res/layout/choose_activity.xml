<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:background= "@drawable/black_background"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".MainActivity">


    <ImageView

        android:layout_width="300px"
        android:layout_height="300px"
        android:id="@+id/imageView"
        android:src="@drawable/car"
        android:layout_above="@+id/search"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp" />

    <Button
        android:layout_width="850px"
        android:layout_height="400px"
        android:background="#ffff299f"
        android:text="Post parKING"
        android:id="@+id/post"

        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search"
        android:layout_marginBottom="19dp" />

    <Button
        android:layout_width="850px"
        android:layout_height="400px"
        android:background="#ffff25e6"
        android:text="Search parKING"
        android:id="@+id/search"

        android:layout_above="@+id/post"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Hello "
        android:id = "@+id/hello"
        android:textColor = "#ff7aff24"
        android:textSize = "35dp"
        android:layout_above="@+id/textview"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Choose what to do"
        android:id = "@+id/textView"
        android:textColor = "#ff7aff24"
        android:textSize = "35dp"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />


</RelativeLayout>